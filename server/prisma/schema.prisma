// Prisma schema: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id              String         @id @default(cuid())
  name            String         // Name is not unique - DID is the identifier
  email           String
  contactName     String
  contactPhone    String?
  website         String?
  address         String?
  city            String?
  country         String?
  description     String?
  did             String         @unique // DID is required and unique - primary identifier
  didPrivateKey   String?
  isVerified      Boolean       @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  apiKeys         ApiKey[]
}

model ApiKey {
  id              String         @id @default(cuid())
  key             String         @unique // The actual API key string
  organizationId  String
  organization    Organization   @relation(fields: [organizationId], references: [id])
  createdAt       DateTime       @default(now())
  expiresAt       DateTime?
  lastUsedAt      DateTime?
}

model DocumentProof {
  id                  String       @id @default(cuid())
  documentHash        String       @unique // SHA-256 hash of the document
  hederaTransactionId String
  consensusTimestamp  String
  issuerDid           String       // The DID of the issuer organization
  createdAt           DateTime     @default(now())
}

